<div class="table-responsive" id="products">
    <table class="table table-dark ">
        <thead >
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Purchasing price</th>
                <th>Discount</th>
                <th>Catagory</th>
                <th>Rating</th>
                <th colspan="4"></th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
                <tr>
                <td><%= product.title %></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= product.purchasing_price %></td>
                <td><%= product.discount %></td>
                <td><%= product.catagory %></td>
                <td><%= product.rating %></td>

                <td><%= link_to 'Show', product %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <td><%= link_to 'Add To Cart', add_cart_path(product)%></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate @products, renderer: BootstrapPagination::Rails, remote: true, param_name: 'product_page', class: 'justify-content-center' %>
    <%= link_to 'New Product', new_product_path , class: "btn"%>
</div>