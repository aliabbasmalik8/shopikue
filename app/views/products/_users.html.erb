<h1>Users</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead >
            <tr>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                <td><%= user.email %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate @users, renderer: BootstrapPagination::Rails, remote: true, param_name: 'user_page', class: 'justify-content-center' %>
    <br>
</div>