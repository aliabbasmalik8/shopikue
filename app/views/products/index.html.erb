<div class="container">
 
 <div class="card-columns">
  <% @products.each do |product| %>
      <div class="card">
        <%= link_to image_tag(product.first_image_url.to_s,:align=>"middle", width: '350px',height: '350px', class: 'card-img-top img-fluid'),  add_cart_path(product) %>
        <div class="card-block">
          <h4 class="card-title" align="center"><%= product.title %> | <%= product.price %></h4>
          <p class="card-text" align="center"><%= product.description %></p>
          <button class="form-control"><%= link_to 'Add To Cart', add_cart_path(product)%></button>
        </div>
      </div>
    <% end %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Purchasing price</th>
        <th>Discount</th>
        <th>Catagory</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.purchasing_price %></td>
          <td><%= product.discount %></td>
          <td><%= product.catagory %></td>
          <td><%= product.rating %></td>

          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Add To Cart', add_cart_path(product)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Product', new_product_path %>
</div>