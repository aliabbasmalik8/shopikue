<div class="container">
  <br><br>
  <div id="product_images" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @i= 0 %>
      <% @count = @product.images.count %>
      <% while @i < @count %>
        <li data-target="#product_images" data-slide-to="<%= @i %>" ></li>
        <% @i = @i+1 %>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <% if @product.images.any? %>
          <img class="d-block w-100" style="height: 350px" src=<%= @product.images.first.image.to_s%> alt="First slide">
        <% end %>
      </div>
      <% @j = 0 %>
      <% @product.images.each do |image| %>
        <% if @j != 0 %>
          <div class="carousel-item">
            <img class="d-block w-100" style="height: 350px" src=<%= image.image.to_s%> alt="Second slide">
          </div>
        <% end %>
        <% @j = @j + 1 %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#product_images" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#product_images" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="row">
    <div class="col-md-6">
      <p>
        <strong>Title:</strong>
        <%= @product.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>
        <strong>Purchasing price:</strong>
        <%= @product.purchasing_price %>
      </p>

      <p>
        <strong>Discount:</strong>
        <%= @product.discount %>
      </p>

      <p>
        <strong>Catagory:</strong>
        <%= @product.catagory %>
      </p>

      <p>
        <strong>Rating:</strong>
        <%= @product.rating %>
      </p>

      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>    
    </div>
    <div class="col-md-6">
      <%= render 'images/images' %>
    </div>
  </div>
</div>
