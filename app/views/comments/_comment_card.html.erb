<% unless root.nil? %>
  <div class="card" id="comment-card_of_<%= root.id%>" >
    <div class="card" id="comment-card" >
      <div class="card-body">
        <div class="well"  style="display: inline;">
          <%= image_tag(root.user.image.to_s,:align=>"middle",class: 'card-img-top',style:"height:35px; width:35px") %>
          <span id="comment_card_<%= root.id %>" class="comment_font">
            &nbsp;
            <%= root.body %>
          </span>
          <div style="display: inline;" class="float-right" >
          <% if current_user != nil %>
            <% if root.ancestry==nil %>
              <%= link_to 'reply', new_product_comment_path(root.product_id,ancestry: root.id), remote: true, class:'btn reply_comment' %>
            <% end %>
            <% if current_user.id == root.user_id %>
              <%= link_to 'Edit', edit_product_comment_path(root.product_id,root), remote: true, class: "btn edit_comment" %>
              <%= link_to 'Destroy', product_comment_path(root.product_id,root), remote: true ,method: :delete, data: { confirm: 'Are you sure?' },class:'btn delete_comment' %>
            <% end %>
          <% end %>
          </div>
        </div>  
      </div>
    </div>
  </div>
<% end%>