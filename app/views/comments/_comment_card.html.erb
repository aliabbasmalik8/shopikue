<% unless root.nil? %>
  <div class="card" id="comment-card" >
    <div class="card-body">
      <div class="well"  style="display: inline;">
        <span id="comment_card_<%= root.id %>">
          <%= root.body %>
        </span>
        <div style="display: inline;" class="float-right" >
        <% if current_user %>
          <% if root.ancestry==nil %>
            <%= link_to 'reply', new_product_comment_path(:ancestry => root), remote: true, class:'btn reply_comment' %>
          <% end %>
            <% if root.user_id==current_user.id %>
            <%= link_to 'Edit', edit_product_comment_path(params[:product_id],root),class:'btn', remote: true, class: "btn edit_comment" %>
            <%= link_to 'Destroy', product_comment_path(params[:product_id],root), remote: true ,method: :delete, data: { confirm: 'Are you sure?' },class:'btn delete_comment' %>
          <% end %>
        <% end %>
        </div>
      </div>  
    </div>
  </div>
<% end%>