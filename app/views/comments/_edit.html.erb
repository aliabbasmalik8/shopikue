<div class="card" id="child_form_<%= @comment.id %>">
    <div class="row">
        <div class="col-md-12">
            <%= form_tag(product_comment_path, method: :patch, remote: true) do %>
                <textarea id="comment_body_<%= @comment.id %>" name="comment[body]" class="form-control" rows="2" required data-behavior="update_comment" data-comment_id="<%= @comment.id %>"> <%= @comment.body%> </textarea>
            <% end %>
        </div>
    </div>
</div>
