<% unless root.nil? %>
  <div class="card" id="comment-card_of_<%= root.id%>" >
    <div class="card" id="comment-card" >
      <div class="card-body">
        <div class="well"  style="display: inline;">
          <span id="comment_card_<%= root.id %>">
            <%= root.body %>
          </span>
          <div style="display: inline;" class="float-right" id="functionality_of_<%= root.id%>" >
            <% if root.ancestry==nil %>
              <%= link_to 'reply', new_product_comment_path(root.product_id,ancestry: root.id), remote: true, class:'btn reply_comment' %>
            <% end %>
          </div>
        </div>  
      </div>
    </div>
    <div id="child_comment_<%= root.id %>" style="margin-left: 60px;"></div>
  </div>
<% end%>