<div class="container">
    <br>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Billing Info</th>
                <th>Shipping Info</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td for="email">Email address:</td>
                <td><%= @email %></td>
            </tr>
            <tr>
                <td>Name: </td>
                <td><%= @billing_name %></td>
                <td><%= @shipping_name %></td>
            </tr>
            <tr>
                <td>City: </td>
                <td><%= @billing_city %></td>
                <td><%= @shipping_city %></td>
            </tr>
            <tr>
                <td>State: </td>
                <td><%= @billing_state %></td>
                <td><%= @shipping_state %></td>
            </tr>
            <tr>
                <td>Country: </td>
                <td><%= @billing_country %></td>
                <td><%= @shipping_country %></td>
            </tr>
            <tr>
                <td>Country Code: </td>
                <td><%= @billing_country_code %></td>
                <td><%= @shipping_country_code %></td>
            </tr>
            <tr>
                <td>Zip Code: </td>
                <td><%= @billing_address_zip_code %></td>
                <td><%= @shipping_address_zip_code %></td>
            </tr>
            <tr>
                <td>Address: </td>
                <td><%= @billing_address %></td>
                <td><%= @shipping_address %></td>
            </tr>
        </tbody>
    </table>
    <%= link_to products_path do %>
        <button class="btn btn-default">back</button>
    <% end %>
</div>