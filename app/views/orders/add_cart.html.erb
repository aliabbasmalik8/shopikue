<div class="container">
  <div class="row">
    <div class="col-sm-3 col-md-6 col-lg-4">
      <%= image_tag(@product[0].images.first.image.to_s,:align=>"middle", width: '350px',height: '350px') %>
    </div>
    <div class="col-sm-9 col-md-6 col-lg-8" >
      <h1><%= @product[0].title %></h1>
      <div class="well"><%= @product[0].description %></div>
      <div><strong>Price:</strong> <%= @product[0].price%></div>
      <br>

      <%= form_tag(add_to_cart_path) do%>
        <div class="field form-group col-7">
          <%= label_tag :quantity %> <br/>
          <%= number_field_tag :quantity %>
        </div>
        <div class="actions form-group col-7">
          <%= submit_tag 'Add to Cart',class:'form-control'%>
        </div>
      <% end %>


    </div>
  </div>









</div>



